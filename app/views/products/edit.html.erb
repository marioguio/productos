<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <h2>Editando producto</h2>
      <%= form_for @producto do |f| %>
      <div class="form-group">
        <%= f.text_field :name, class: "form-control input-lg" , placeholder: "Producto" %>
      </div>
      <div class="form-group">
        <%= f.number_field :price, class: "form-control input-lg" , placeholder: "Precio" %>
      </div>
      <%= f.collection_check_boxes :category_ids, Category.all, :id, :name  do |c| %>
      <div class="checkbox">
        <%= c.label do %>
        <%= c.check_box %> <%= c.object.name %>
        <% end %>
      </div>
      <% end %>
      <div class="form-group">
        <%= f.submit "uodate product", class: "btn btn-primary btn-lg btn-block" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
